<?php
/**
 * @var $block \Magento\Checkout\Block\Cart\Item\Renderer
 */
$_item = $block->getItem();
$product = $_item->getProduct();
$isVisibleProduct = $product->isVisibleInSiteVisibility();

// Busca as imagens (original e processada)
$processedImageUrl = null;
$originalImageUrl = null;

try {
    if ($_item->getOptionByCode('option_ids')) {
        $optionIds = explode(',', $_item->getOptionByCode('option_ids')->getValue());
        foreach ($optionIds as $optionId) {
            $option = $_item->getOptionByCode('option_' . $optionId);
            if ($option) {
                $optionConfig = $product->getOptionById($optionId);
                if ($optionConfig) {
                    $title = strtolower($optionConfig->getTitle());
                    if (stripos($title, 'processada') !== false) {
                        $processedImageUrl = $option->getValue();
                    } elseif (stripos($title, 'original') !== false) {
                        $originalImageUrl = $option->getValue();
                    }
                }
            }
        }
    }
} catch (\Exception $e) {
    // Silenciosamente ignora erros
}
?>

<tbody class="cart item">
    <tr class="item-info">
        <td data-th="<?= $block->escapeHtml(__('Item')) ?>" class="col item">
          <?php 
// Monta URL com parÃ¢metros das imagens
$productUrl = $block->getProductUrl();
if ($processedImageUrl && $originalImageUrl) {
    $productUrl = $block->getUrl('ai/product/view', [
        'id' => $product->getId(),
        'processed' => base64_encode($processedImageUrl),
        'original' => base64_encode($originalImageUrl)
    ]);
}
?>
