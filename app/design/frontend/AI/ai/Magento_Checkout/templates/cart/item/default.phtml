<?php
/**
 * @var $block \Magento\Checkout\Block\Cart\Item\Renderer
 */
$_item = $block->getItem();
$product = $_item->getProduct();
$isVisibleProduct = $product->isVisibleInSiteVisibility();

// Busca a imagem processada
$processedImageUrl = null;
try {
    if ($_item->getOptionByCode('option_ids')) {
        $optionIds = explode(',', $_item->getOptionByCode('option_ids')->getValue());
        foreach ($optionIds as $optionId) {
            $option = $_item->getOptionByCode('option_' . $optionId);
            if ($option) {
                $optionConfig = $product->getOptionById($optionId);
                if ($optionConfig && stripos($optionConfig->getTitle(), 'processada') !== false) {
                    $processedImageUrl = $option->getValue();
                    break;
                }
            }
        }
    }
} catch (\Exception $e) {
    // Silenciosamente ignora erros
}
?>

<tbody class="cart item">
    <tr class="item-info">
        <td data-th="<?= $block->escapeHtml(__('Item')) ?>" class="col item">
            <?php if ($isVisibleProduct): ?>
            <a href="<?= $block->escapeUrl($block->getProductUrl()) ?>"
               title="<?= $block->escapeHtml($block->getProductName()) ?>"
               tabindex="-1"
               class="product-item-photo">
            <?php else: ?>
            <span class="product-item-photo">
            <?php endif; ?>
                <?php if ($processedImageUrl): ?>
                    <span class="product-image-container" style="width: 165px;">
                        <span class="product-image-wrapper" style="padding-bottom: 100%;">
                            <img class="product-image-photo"
                                 src="<?= $block->escapeUrl($processedImageUrl) ?>"
                                 loading="lazy"
                                 width="165"
                                 height="165"
                                 alt="<?= $block->escapeHtml($block->getProductName()) ?>"/>
                        </span>
                    </span>
                <?php else: ?>
                    <?= $block->getImage($product, 'cart_page_product_thumbnail')->toHtml() ?>
                <?php endif; ?>
            <?php if ($isVisibleProduct): ?>
            </a>
            <?php else: ?>
            </span>
            <?php endif; ?>
            
            <div class="product-item-details">
                <strong class="product-item-name">
                    <?php if ($isVisibleProduct): ?>
                        <a href="<?= $block->escapeUrl($block->getProductUrl()) ?>">
                            <?= $block->escapeHtml($block->getProductName()) ?>
                        </a>
                    <?php else: ?>
                        <?= $block->escapeHtml($block->getProductName()) ?>
                    <?php endif; ?>
                </strong>
                
                <?php if ($_options = $block->getOptionList()): ?>
                <dl class="item-options">
                    <?php foreach ($_options as $_option): ?>
                    <dt><?= $block->escapeHtml($_option['label']) ?></dt>
                    <dd>
                        <?php if (filter_var($_option['value'], FILTER_VALIDATE_URL)): ?>
                            <a href="<?= $block->escapeUrl($_option['value']) ?>" target="_blank">
                                Ver imagem
                            </a>
                        <?php else: ?>
                            <?= $block->escapeHtml($_option['value']) ?>
                        <?php endif; ?>
                    </dd>
                    <?php endforeach; ?>
                </dl>
                <?php endif; ?>
            </div>
        </td>
        
        <td class="col price" data-th="<?= $block->escapeHtml(__('Price')) ?>">
            <?= $block->getUnitPriceHtml($_item) ?>
        </td>
        
        <td class="col qty" data-th="<?= $block->escapeHtml(__('Qty')) ?>">
            <div class="field qty">
                <div class="control qty">
                    <label for="cart-<?= $block->escapeHtmlAttr($_item->getId()) ?>-qty">
                        <span class="label"><?= $block->escapeHtml(__('Qty')) ?></span>
                        <input id="cart-<?= $block->escapeHtmlAttr($_item->getId()) ?>-qty"
                               name="cart[<?= $block->escapeHtmlAttr($_item->getId()) ?>][qty]"
                               data-cart-item-id="<?= $block->escapeHtmlAttr($_item->getSku()) ?>"
                               value="<?= $block->escapeHtmlAttr($block->getQty()) ?>"
                               type="number"
                               size="4"
                               step="any"
                               title="<?= $block->escapeHtmlAttr(__('Qty')) ?>"
                               class="input-text qty"
                               data-validate="{required:true,'validate-greater-than-zero':true}"
                               data-role="cart-item-qty"/>
                    </label>
                </div>
            </div>
        </td>
        
        <td class="col subtotal" data-th="<?= $block->escapeHtml(__('Subtotal')) ?>">
            <?= $block->getRowTotalHtml($_item) ?>
        </td>
    </tr>
    
    <tr class="item-actions">
        <td colspan="4">
            <div class="actions-toolbar">
                <?= $block->getActions($_item) ?>
            </div>
        </td>
    </tr>
</tbody>